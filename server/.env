# Gemini API Key - Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSyAt_kE_M-NSbgEvMPflY9rxD8btG3JFJi0

# =============================================================================
# SOLANA BLOCKCHAIN CONFIGURATION (Optional)
# =============================================================================

# Solana RPC URL (use devnet for testing, mainnet for production)
SOLANA_RPC_URL=https://api.devnet.solana.com

# Path to your Solana wallet file
SOLANA_WALLET_PATH=wallet.json

# Program ID for reading progress tracking (use default for testing)
READING_PROGRAM_ID=11111111111111111111111111111111

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
APP_ORIGINS=http://localhost:5173,http://localhost:3000,http://raspberrypi.local

# Debug mode (True for development, False for production)
DEBUG=True

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
the server you just have to 
# =============================================================================
# AUDIO CONFIGURATION
# =============================================================================

# Audio cache settings
AUDIO_CACHE_SIZE=100
AUDIO_CACHE_TTL=3600

# Default reading speed (0.5 to 2.0)
DEFAULT_READING_SPEED=1.0

# =============================================================================
# DOCUMENT PROCESSING
# =============================================================================

# Maximum document size (e.g., 50MB, 100MB)
MAX_DOCUMENT_SIZE=50MB

# Supported file formats (comma-separated)
SUPPORTED_FORMATS=pdf,docx,txt

# =============================================================================
# DATABASE CONFIGURATION (Optional)
# =============================================================================

# Database URL (if using a database for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/adhd_reader

# Redis URL (if using Redis for caching)
# REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for JWT tokens (generate a random string)
# SECRET_KEY=your_secret_key_here

# JWT expiration time (in seconds)
# JWT_EXPIRATION=3600

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Enable analytics (True/False)
# ENABLE_ANALYTICS=False

# Analytics tracking ID (if using Google Analytics)
# ANALYTICS_ID=your_analytics_id_here

# =============================================================================
# RASPBERY PI SPECIFIC
# =============================================================================

# GPIO pin for LED indicator (optional)
# LED_PIN=18

# GPIO pin for button input (optional)
# BUTTON_PIN=24

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Hot reload for development
# HOT_RELOAD=True

# Mock AI responses for testing
# MOCK_AI_RESPONSES=False

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Uncomment and modify for production deployment
# DEBUG=False
# LOG_LEVEL=WARNING
# APP_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/adhd_reader?retryWrites=true&w=majority
MONGODB_DATABASE=adhd_reader
MONGODB_COLLECTION_DOCUMENTS=documents
MONGODB_COLLECTION_USERS=users
MONGODB_COLLECTION_PROGRESS=reading_progress
MONGODB_COLLECTION_TRANSACTIONS=solana_transactions
